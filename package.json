{
  "name": "honey-shop-server",
  "version": "1.0.0",
  "author": "Denis Zolotarenko",
  "main": "build/index.js",
  "private": true,
  "scripts": {
    "tsc": "tsc",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpileOnly src/worker.ts",
    "prod-pm2": "tsc && pm2 start ./dist/worker.js --name honey-shop-server",
    "prod-cluster": "NODE_ENV=production tsc && node ./dist/index.js",
    "uninstall-lefthook": "npx lefthook uninstall && npm uninstall @arkweid/lefthook"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/lodash": "^4.14.154",
    "@types/log4js": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "mocha": "^7.2.0",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "<3.8.0"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "express": "~4.16.1",
    "helmet": "^3.22.0",
    "lodash": "^4.17.15",
    "log4js": "^6.2.1",
    "nocache": "^2.1.0"
  }
}
