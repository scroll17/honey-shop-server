{
  "name": "honey-shop-server",
  "version": "1.0.0",
  "author": "Denis Zolotarenko",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "tsc": "tsc",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpileOnly src/worker.ts",
    "watch": "NODE_ENV=development ts-node-dev --respawn --transpileOnly",
    "prod-pm2": "NODE_ENV=production tsc && pm2 start ./dist/worker.js --name honey-shop-server",
    "prod-cluster": "NODE_ENV=production tsc -p tsconfig.production.json && node ./dist/index.js",
    "build/prod": "NODE_ENV=production tsc -p tsconfig.production.json",
    "uninstall-lefthook": "npx lefthook uninstall && npm uninstall @arkweid/lefthook"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.9.36",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/lodash": "^4.14.154",
    "@types/log4js": "^2.3.5",
    "@types/mocha": "^7.0.2",
    "@types/mock-require": "^2.0.0",
    "@types/moment": "^2.13.0",
    "@types/node": "^14.0.13",
    "@types/pg": "^7.14.3",
    "@types/yup": "^0.29.3",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "eslint": "^7.1.0",
    "mocha": "^7.2.0",
    "mock-require": "^3.0.3",
    "prettier": "^2.0.5",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "<3.8.0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "express": "~4.16.1",
    "helmet": "^3.22.0",
    "lodash": "^4.17.19",
    "log4js": "^6.2.1",
    "migrate": "^1.7.0",
    "moment": "^2.26.0",
    "nocache": "^2.1.0",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "yup": "^0.29.1"
  }
}
